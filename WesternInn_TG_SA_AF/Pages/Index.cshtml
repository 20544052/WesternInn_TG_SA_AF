@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<<div id="Rooms" class="carousel slide" data-bs-ride="carousel" data-bs-interval="1500">

    <!-- Indicators -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#Rooms" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#Rooms" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#Rooms" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#Rooms" data-bs-slide-to="3"></button>
    </div>

    <!-- The Slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            @* Each img tag should be styiled by the 'd-block' class and the 'w-100' class.
               'd-block' displays the image in block mode.
               'w-100' means 100% width, making the image span the entire width of the container.
            *@
            <img src="~/images/room1.jpg" class="d-block w-100" alt="Room 1" />
            <div class="carousel-caption">
                <h3>
                    Room 1
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/room2.jpg" class="d-block w-100" alt="Room 2" />
            <div class="carousel-caption">
                <h3>
                    Room 2
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/room3.jpg" class="d-block w-100" alt="Room 3" />
            <div class="carousel-caption">
                <h3>
                    Room 3
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/room4.jpg" class="d-block w-100" alt="Room 4" />
            <div class="carousel-caption">
                <h3>
                    Room 4
                </h3>
            </div>
        </div>
    </div>

    <!-- Left and Right controls-->
    <button type="button" class="carousel-control-prev" data-bs-target="#Rooms" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button type="button" class="carousel-control-next" data-bs-target="#Rooms" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
